@page
@model MiniAccountSystem.Pages.Admin.AssignModuleAccessModel
@{
    ViewData["Title"] = "Assign Module Access";
}
<h2>Assign Module Access</h2>

<form method="post">
    <div class="form-group">
        <label>Select Role</label>
        <select asp-for="SelectedRole" class="form-control" asp-items="Model.Roles"></select>
    </div>
    <div class="form-group">
        <label>Select Module</label>
        <select asp-for="SelectedModule" class="form-control" asp-items="Model.Modules"></select>
    </div>
    <button type="submit" class="btn btn-primary">Assign Access</button>
</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-success mt-3">@Model.Message</div>
}