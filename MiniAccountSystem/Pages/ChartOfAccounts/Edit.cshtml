@page
@model MiniAccountSystem.Pages.ChartOfAccounts.EditModel
@{
    ViewData["Title"] = "Edit Account";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">
                <i class="bi bi-journal-bookmark"></i> Edit Account
            </h3>
        </div>
        <div class="card-body">
            <form method="post" class="needs-validation" novalidate>
                <input type="hidden" asp-for="Account.Id" />

                <div class="row">
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label asp-for="Account.Name" class="form-label fw-bold">
                                <i class="bi bi-tag"></i> Account Name
                            </label>
                            <input asp-for="Account.Name" class="form-control form-control-lg" placeholder="Enter account name" />
                            <span asp-validation-for="Account.Name" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="Account.ParentId" class="form-label fw-bold">
                                <i class="bi bi-diagram-2"></i> Parent Account
                            </label>
                            <select asp-for="Account.ParentId" class="form-select form-select-lg"
                                    asp-items="@(new SelectList(Model.ParentAccounts, "Id", "Name"))">
                                <option value="">-- Select Parent --</option>
                            </select>
                            <span asp-validation-for="Account.ParentId" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                    <a asp-page="List" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-save"></i> Update Account
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 0.5rem;
            border: none;
        }

        .form-control, .form-select {
            border-radius: 0.25rem;
            padding: 0.5rem 1rem;
        }

            .form-control:focus, .form-select:focus {
                box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
                border-color: #86b7fe;
            }

        .btn {
            border-radius: 0.25rem;
            padding: 0.375rem 1.5rem;
            font-weight: 500;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Enhance form validation
        (function () {
            'use strict'
            const forms = document.querySelectorAll('.needs-validation')

            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}