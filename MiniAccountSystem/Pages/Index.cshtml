<style>
    /* Modern Hero Section */
    .hero-section {
        background: linear-gradient(135deg, #2c3e50 0%, #3498db 100%);
        padding: 6rem 0 8rem;
        color: white;
    }


    .text-white-80 {
        color: rgba(255, 255, 255, 0.8);
    }

    .text-white-60 {
        color: rgba(255, 255, 255, 0.6);
    }

    .dashboard-preview {
        border: 1px solid rgba(255, 255, 255, 0.1);
        transform: perspective(1000px) rotateY(-10deg);
        transition: all 0.3s ease;
    }

        .dashboard-preview:hover {
            transform: perspective(1000px) rotateY(-5deg);
        }

    .floating-card {
        position: absolute;
        background: white;
        border-radius: 8px;
        width: 180px;
        animation: float 6s ease-in-out infinite;
    }

    .card-1 {
        top: -20px;
        left: -30px;
        animation-delay: 0s;
    }

    .card-2 {
        bottom: -20px;
        right: -30px;
        animation-delay: 2s;
    }

    .trust-badges img {
        filter: brightness(0) invert(1);
        opacity: 0.8;
    }

    /* Wave shape divider */
    .wave-shape {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        overflow: hidden;
        line-height: 0;
    }

        .wave-shape svg {
            position: relative;
            display: block;
            width: calc(100% + 1.3px);
            height: 100px;
        }

    /* Logo cloud */
    .grayscale {
        filter: grayscale(100%);
        transition: all 0.3s ease;
    }

        .grayscale:hover {
            filter: grayscale(0%);
            opacity: 1 !important;
        }

    /* Feature tabs */
    .feature-icon {
        transition: all 0.3s ease;
    }

    .nav-pills .nav-link {
        border-left: 3px solid transparent;
        transition: all 0.3s ease;
    }

        .nav-pills .nav-link.active {
            background: rgba(13, 110, 253, 0.05);
            border-left: 3px solid #0d6efd;
            color: #0d6efd;
        }

    /* Testimonials */
    .testimonial-card {
        transition: all 0.3s ease;
    }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        width: 2.5rem;
        height: 2.5rem;
        background-size: 1.5rem;
    }

    /* CTA Section */
    .cta-section {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        padding: 6rem 0;
    }

    .cta-shape-1 {
        position: absolute;
        width: 300px;
        height: 300px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 50%;
        top: -150px;
        right: -150px;
    }

    .cta-shape-2 {
        position: absolute;
        width: 200px;
        height: 200px;
        background: rgba(255, 255, 255, 0.03);
        border-radius: 50%;
        bottom: -100px;
        left: -100px;
    }

    /* Animations */
    @@keyframes float {
        0% {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-15px);
        }

        100% {
            transform: translateY(0px);
        }
    }

    /* Responsive adjustments */
    @@media (max-width: 992px) {
        .hero-section {
            text-align: center;
        }

        .dashboard-preview {
            transform: none !important;
            margin-top: 3rem;
        }

        .floating-card {
            display: none;
        }

        .trust-badges {
            justify-content: center;
        }
    }

    @@media (max-width: 768px) {
        .display-4 {
            font-size: 2.5rem;
        }

        .lead {
            font-size: 1.1rem;
        }
    }
</style>

@section Scripts {
