@page
@model MiniAccountSystem.Pages.Vouchers.IndexModel
@{
    ViewData["Title"] = "Voucher Entry";
}

<div class="container-fluid voucher-dashboard">
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-gradient-voucher text-white">
                    <h3 class="card-title mb-0"><i class="fas fa-file-invoice mr-2"></i>Voucher Actions</h3>
                </div>
                <div class="card-body bg-light-gray">
                    <a asp-page="/Vouchers/Create" class="btn btn-outline-info btn-block py-3 mb-3">
                        <i class="fas fa-plus-circle mr-2"></i>Create New Voucher
                    </a>
                    <div class="d-flex justify-content-between">
                        <a href="#" class="btn btn-outline-dark"><i class="fas fa-search mr-2"></i>Search</a>
                        <a href="#" class="btn btn-outline-secondary"><i class="fas fa-history mr-2"></i>History</a>
                    </div>
                </div>
            </div>
        </div>

        @if (User.IsInRole("Admin") || User.IsInRole("Accountant"))
        {
            <div class="col-md-6">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-gradient-reports text-white">
                        <h3 class="card-title mb-0"><i class="fas fa-chart-line mr-2"></i>Reports & Analytics</h3>
                    </div>
                    <div class="card-body bg-light-gray">
                        <a asp-page="/Vouchers/List" class="btn btn-outline-dark btn-block py-3 mb-3">
                            <i class="fas fa-file-alt mr-2"></i>Daily Vouchers Report
                        </a>
                        <div class="d-flex justify-content-between">
                            <a href="#" class="btn btn-outline-dark"><i class="fas fa-calendar-day mr-2"></i>Daily</a>
                            <a href="#" class="btn btn-outline-dark"><i class="fas fa-calendar-week mr-2"></i>Weekly</a>
                            <a href="#" class="btn btn-outline-dark"><i class="fas fa-calendar mr-2"></i>Monthly</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Additional Dashboard Elements -->
    <!-- Additional Dashboard Elements -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom">
                    <h4 class="mb-0"><i class="fas fa-tachometer-alt mr-2 text-primary"></i>Voucher Summary</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="stat-card bg-light-primary p-3 rounded">
                                <h6 class="text-muted">Today's Vouchers</h6>
                                <h3 class="text-primary">24</h3>
                                <small class="text-success"><i class="fas fa-arrow-up mr-1"></i>12% from yesterday</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="stat-card bg-light-success p-3 rounded">
                                <h6 class="text-muted">This Month</h6>
                                <h3 class="text-success">342</h3>
                                <small class="text-success"><i class="fas fa-arrow-up mr-1"></i>8% from last month</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="stat-card bg-light-warning p-3 rounded">
                                <h6 class="text-muted">Pending Approval</h6>
                                <h3 class="text-warning">5</h3>
                                <small class="text-danger"><i class="fas fa-exclamation-circle mr-1"></i>Require attention</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="stat-card bg-light-info p-3 rounded">
                                <h6 class="text-muted">Total Value</h6>
                                <h3 class="text-info">$12,456</h3>
                                <small class="text-muted">Average: $512/day</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>

    :root {
 
        --secondary-color: #2e3a59;
        --my-color: rgba(0, 0, 0, 0.1);
       
    }
    .voucher-dashboard {
        padding: 2rem;
        background: linear-gradient(135deg,var(--my-color), rgba(0, 0, 100, 0.3));
        min-height: calc(100vh - 56px);
    }

    .card {
        border-radius: 0.5rem;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid #e0e0e0;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15);
        }

    .card-header {
        font-weight: 600;
        border-bottom: none;
    }

    .bg-gradient-voucher {
        background: linear-gradient(135deg, #4b6cb7 0%, #182848 100%);
    }

    .bg-gradient-reports {
        background: linear-gradient(135deg, #606c88 0%, #3f4c6b 100%);
    }

    .bg-light-gray {
        background-color: #f8f9fa;
    }

    .bg-lighter-gray {
        background-color: #ffffff;
    }

    .bg-gray-gradient-1 {
        background: linear-gradient(135deg, #485563 0%, #29323c 100%);
    }

    .bg-gray-gradient-2 {
        background: linear-gradient(135deg, #3a3a3a 0%, #1f1f1f 100%);
    }

    .bg-gray-gradient-3 {
        background: linear-gradient(135deg, #4e4e4e 0%, #2d2d2d 100%);
    }

    .bg-gray-gradient-4 {
        background: linear-gradient(135deg, #5a5a5a 0%, #3a3a3a 100%);
    }

    .stat-card {
        transition: all 0.3s ease;
        border: none;
    }

        .stat-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 15px rgba(0,0,0,0.1);
            opacity: 0.9;
        }

    .btn-lg {
        font-weight: 500;
        letter-spacing: 0.5px;
    }

    .bg-light-primary {
        background-color: rgba(13,110,253,0.1);
    }

    .bg-light-success {
        background-color: rgba(25,135,84,0.1);
    }

    .bg-light-warning {
        background-color: rgba(255,193,7,0.1);
    }

    .bg-light-info {
        background-color: rgba(13,202,240,0.1);
    }

    .text-light {
        opacity: 0.9;
    }
</style>

@section Scripts {
    <!-- Font Awesome for icons -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}