@page
@model MiniAccountSystem.Pages.Vouchers.ListModel
@{
    ViewData["Title"] = "Voucher Entry";
}
<div class="voucher-dashboard">
    <div class="card">
        <h3>Voucher Actions</h3>
        <a asp-page="/Vouchers/Create" class="btn btn-success mb-2">Create New Voucher</a>
    </div>

    @if (User.IsInRole("Admin") || User.IsInRole("Accountant"))
    {
        <div class="card">
            <h3>Quick Reports</h3>
            <a asp-page="./Reports/Daily" class="btn btn-info">Daily Vouchers</a>
        </div>
    }
</div>

<h3 class="mt-4">All Vouchers</h3>

@if (Model.Vouchers.Any())
{
    <table class="table table-bordered table-striped mt-3">
        <thead>
            <tr>
                <th>ID</th>
                <th>Voucher Type</th>
                <th>Reference No</th>
                <th>Date</th>
                <th>Total Debit</th>
                <th>Total Credit</th>
                <th>Created By</th>
                <th>Created Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var voucher in Model.Vouchers)
            {
                <tr>
                    <td>@voucher.Id</td>
                    <td>@voucher.VoucherType</td>
                    <td>@voucher.ReferenceNo</td>
                    <td>@voucher.VoucherDate.ToString("yyyy-MM-dd")</td>
                    <td>@voucher.TotalDebit.ToString("N2")</td>
                    <td>@voucher.TotalCredit.ToString("N2")</td>
                    <td>@(voucher.CreatedBy ?? "N/A")</td>
                    <td>@(voucher.CreatedDate?.ToString("yyyy-MM-dd HH:mm") ?? "N/A")</td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@voucher.Id" class="btn btn-sm btn-info">View</a>
                        <a asp-page="./Edit" asp-route-id="@voucher.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-page="./Delete" asp-route-id="@voucher.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="mt-3">No vouchers found.</p>
}

<style>
    .voucher-dashboard {
        display: flex;
        gap: 20px;
        margin-top: 20px;
    }

    .card {
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        min-width: 250px;
    }
</style>